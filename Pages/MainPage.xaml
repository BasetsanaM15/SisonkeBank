<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SisonkeBank.Pages.MainPage"
             Title="Main Page"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

            <Label Text="Welcome to Sisonke Bank"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Button Text="Transfer Funds"
                    Clicked="OnTransferFundsClicked"
                    BackgroundColor="#007ACC"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="10" />

            <Button Text="View Account Balance"
                    Clicked="OnViewBalanceClicked"
                    BackgroundColor="#228B22"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="10" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
