<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SisonkeBank.Views.RegistrationPage"
             Title="Register"
             BackgroundColor="#FFFFFF">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <!-- Title -->
            <Label Text="Create an Account"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Email -->
            <Label Text="Email" FontAttributes="Bold" />
            <Entry x:Name="emailEntry" Placeholder="Enter your email" Keyboard="Email" />

            <!-- Password -->
            <Label Text="Password" FontAttributes="Bold" />
            <Entry x:Name="passwordEntry" Placeholder="Enter your password" IsPassword="True" />

            <!-- Confirm Password -->
            <Label Text="Confirm Password" FontAttributes="Bold" />
            <Entry x:Name="confirmPasswordEntry" Placeholder="Re-enter password" IsPassword="True" />

            <!-- Register Button -->
            <Button Text="Register"
                    BackgroundColor="#1976D2"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="10"
                    Clicked="OnRegisterClicked" />

            <!-- Error Message -->
            <Label x:Name="messageLabel"
                   TextColor="Red"
                   FontSize="14"
                   FontAttributes="Italic"
                   IsVisible="False"
                   Text="Error message will show here." />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>